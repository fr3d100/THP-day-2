	<!-- CONTENT -->
<div class="row m-3">
	<div class="col-sm-12">
			<h1>Voici la liste des utilisateurs : </h1>
	</div>
	<div class="row m-3">
		<% @users.all.each do |user|  %>
		<div class="col-lg-3 col-sm-12">
				<div class="card">
				  <div class="card-body">
				    <h5 class="card-title"><i class="fas fa-user-secret"></i> User #<%=user.id%></h5>
				    <h6 class="card-subtitle mb-2 text-muted"><%=user.first_name%> <%=user.last_name%></h6>
				    <i class="fas fa-angle-right"></i> <%= link_to "Voir plus", user_path(user.id) , class: "card-link" %>
				  </div>
				</div>
				<br>
			</div>
		<% end %>
	</div>
</div>

