<!-- CONTENT -->
<!-- Jumbottron -->
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><i class="fas fa-city"></i> <%=@city.name %>, <small style="font-size:0.5em"> <%=@city.zip_code %></small></h1>
  </div>
</div>

<!-- All users -->
<div class="container m-3 d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h1>Tous les utilisateurs de la ville de  <%= @city.name %>  </h1>
		</div>

		<div class="col-sm-12 d-flex justify-content-center">
			<div class="list-group" style="width:50rem">
				<% @city.users.all.each do |user|  %>
					<%= link_to user_path(user.id), class: "list-group-item list-group-item-action" do %>
				    <div class="d-flex w-100 justify-content-between" >
				      <h5 class="mb-1"><i class="fas fa-user-secret"></i> <%=user.first_name%> <%=user.last_name%></h5>
				      <button type="button" class="btn btn-outline-primary btn-sm">
							  <span class="badge badge-light"><%=user.gossips.size%></span> gossips
							</button>
				    </div>
				    <small><%= user.description %></small>
				  <% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>